#!/usr/bin/env python
"""
Load processing tag.
"""
import os,sys
import logging
import argparse

from archive.parser import LoaderParser
from archive.dexp import create_table, finalize_table, index_table
from archive.dexp import ProctagTable

if __name__ == "__main__":
    parser = LoaderParser()
    parser.add_argument('-t','--tag',required=True,
                        help = "Tag to create (must be in 'proctag.yaml')")
    args = parser.parse_args()

    tab = create_table(ProctagTable)
    tab.load_proctag(args.tag)

    if args.index: index_table(ProctagTable)

    sys.exit(0)
